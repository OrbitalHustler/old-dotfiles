skip_global_compinit=1

preview-file-or-dir()
{
  if [ -d "$1" ]; then
    if (( ${+commands[exa]} )); then
      exa -1 --color=always "$1"
    else
      ls --color=always "$1"
    fi
  elif [ -f "$1" ]; then
    if (( ${+commands[bat]} )); then
      bat --color=always --style=plain "$1"
    else
      less "$1"
    fi
  fi
}

# This is in order to have access to bw executable in tmux
path+="$HOME/.local/asdf/shims"
